.navbar-right(ng-controller="mvNavbarLoginCtrl")
  form.navbar-form(ng-if="!identity.isAuthenticated()")
    ul.nav.navbar-nav
      li
        a(href="/signup") Sign Up
    .form-group
      input.form-control.input-sm(placeholder="Email", ng-model="username")
    .form-group
      input.form-control.input-sm(type="password", placeholder="Password", ng-model="password")
    button.btn.btn-primary.btn-sm(ng-click="signin(username, password)") Signin

  ui.nav.navbar-nav.navbar-right(ng-if="identity.isAuthenticated()")
    li.dropdown
      a.dropdown-toggle(href="", data-toggle="dropdown")
        | {{identity.currentUser.fullName()}}
        b.caret
      ul.dropdown-menu
        li(ng-show="identity.currentUser.hasRole('admin')")
          a(href="/admin") User Admin
        li
          a(href="", ng-click="signout()") Sign Out